{
    "manifestVersion": 1,
    "id": "Distribution-Tasks",
    "name": "Distribution Tasks",
    "publisher": "MDRLabs",
    "version": "12.0.22",
    "public": true,
    "galleryFlags": [
        "Public"
    ],    
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "A set of Build and Release tasks to distribute one or more Taskgroups, variablegroups and service connections to one or more Azure DevOps Team Projects within the same organisation.",
    "categories": [
        "Azure Pipelines"
    ],
    "tags": [
        "Azure DevOps",
        "Classic Pipelines",
        "CI-CD",
        "MDRLabs"
    ],
    "icons": {
        "default": "images/MDRLabs-trans-128x128.png",
        "large": "images/MDRLabs-trans-512x512.png"
    },
    "files": [
        {
            "path": "node_modules/vss-web-extension-sdk/lib",
            "addressable": true,
            "packagePath": "lib"
        },
        {
            "path": "content",
            "addressable": true,
            "packagePath": "content"
        },
        {
            "path": "ProductTasks/TaskgroupDistribution",
            "packagePath": "TaskgroupDistribution"
        },
        {
            "path": "ProductTasks/VariablegroupDistribution",
            "packagePath": "VariablegroupDistribution"
        },
        {
            "path": "ProductTasks/ServiceConnectionDistribution",
            "packagePath": "ServiceConnectionDistribution"
        }
    ],
    "contributions": [
        {
            "id": "MDRLabs-Distribution-Tasks",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "TaskgroupDistribution"
            }
        },
        {
            "id": "MDRLabs-Variablgroup-Distribution",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "VariablegroupDistribution"
            }
        },
        {
            "id": "MDRLabs-Serviceconnection-Distribution",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "ServiceConnectionDistribution"
            }
        }
    ],
    "branding": {
        "color": "rgb(255,255,255)",
        "theme": "light"
    },
    "content": {
        "details": {
            "path": "overview.md"
        },
        "price": {
            "path": "pricing.md"
        },
        "license": {
            "path": "license.md"
        }
    },
    "links": {
        "license": {
            "uri": "https://marketplace.visualstudio.com/items/MDRLabs/license"
        },
        "price": {
            "uri": "https://marketplace.visualstudio.com/items/MDRLabs/pricing"
        },
        "source": {
            "uri": "https://github.com/csharpdocs/azure-devops-distribution-tasks-json-samples"
        }
    }
}
